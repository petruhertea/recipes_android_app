<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/availableIngredientsFragment">

    <fragment
        android:id="@+id/availableIngredientsFragment"
        android:name="com.example.recipes.AvailableIngredientsFragment"
        android:label="fragment_available_ingredients"
        tools:layout="@layout/fragment_available_ingredients" />
    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.recipes.RecipesFragment"
        android:label="fragment_recipes"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.recipes.RecipeDetailsFragment"
        android:label="fragment_recipe_details"
        tools:layout="@layout/fragment_recipe_details"
    >
        <argument
            android:name="recipeID"
            app:argType="integer" />
    </fragment>
</navigation>